CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y
CONFIG_TARGET_x86_64_DEVICE_generic=y

# ！！！重要：修改根文件系统大小为 10GB ！！！
CONFIG_TARGET_ROOTFS_PARTSIZE=10240

# 内核驱动 - 网络
CONFIG_PACKAGE_kmod-r8169=y # Dell 3050 有线网卡驱动
CONFIG_PACKAGE_kmod-usb-net-rtl8152=y # RTL8153 USB网卡驱动
CONFIG_PACKAGE_kmod-iwlwifi=y # Intel 无线网卡通用驱动
CONFIG_PACKAGE_iwlwifi-firmware-iwl3165=y # AC-3165 专用固件

# 基础系统
CONFIG_PACKAGE_blockd=y
CONFIG_PACKAGE_uhttpd=y
CONFIG_PACKAGE_fdisk=y # 添加分区工具

# LuCI Web管理界面 (必须)
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-compat=y
CONFIG_LUCI_LANG_zh_Hans=y # 中文语言包

# 常用LuCI应用
CONFIG_PACKAGE_luci-app-upnp=y # UPNP功能
CONFIG_PACKAGE_luci-app-ddns=y # 动态DNS
CONFIG_PACKAGE_luci-app-commands=y # 计划任务
CONFIG_PACKAGE_luci-app-ttyd=y # 网页终端
CONFIG_PACKAGE_luci-app-disk-manager=y # 磁盘管理

# 常用工具
CONFIG_PACKAGE_bash=y
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_vim-fuller=y
CONFIG_PACKAGE_blkid=y # 磁盘信息工具
CONFIG_PACKAGE_resize2fs=y # 调整文件系统大小工具
CONFIG_PACKAGE_e2fsprogs=y # Ext4文件系统工具
CONFIG_OPENSSL_OPTIMIZE_SPEED=y
